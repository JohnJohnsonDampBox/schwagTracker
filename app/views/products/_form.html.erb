<%= form_for @product, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :name, "Product Name" %></div>
      <div class="col-sm-7"><%= f.text_field :name, class: "form-control", placeholder: "Name of product" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :vendor, "Vendor Name" %></div>
      <div class="col-sm-7"><%= f.text_field :vendor, class: "form-control", placeholder: "Put vendor's name here" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :price, "Price" %></div>
      <div class="col-sm-7"><%= f.number_field :price, value: number_with_precision(f.object.price, precision: 2), class: "form-control", placeholder: "Unit price" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :min_order_qty, "Minimum Order" %></div>
      <div class="col-sm-7"><%= f.number_field :min_order_qty, class: "form-control", placeholder: "Minimum order quantity" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :lead_time, "Lead Time" %></div>
      <div class="col-sm-7"><%= f.number_field :lead_time, class: "form-control", placeholder: "Lead time in days" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :image_url, "Image URL" %></div>
      <div class="col-sm-7"><%= f.text_field :image_url, class: "form-control", placeholder: "Type image url here" %></div>

    </div>
  </div>
  <div class="col-md-5">
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :sku, "SKU" %></div>
      <div class="col-sm-7"><%= f.text_field :sku, class: "form-control", placeholder: "Type SKU here" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :notes, "Product Notes" %></div>
      <div class="col-sm-7"><%= f.text_area :notes, class: "form-control", rows: "3", placeholder: "Notes about current product" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :qty_on_hand, "Current Inventory" %></div>
      <div class="col-sm-7"><%= f.number_field :qty_on_hand, class: "form-control", placeholder: "Amount currently inventoried" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :qty_on_order, "Order Amount" %></div>
      <div class="col-sm-7"><%= f.number_field :qty_on_order, class: "form-control", placeholder: "Amount of product for this order" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :set_up_fee, "Setup Fee" %></div>
      <div class="col-sm-7"><%= f.number_field :set_up_fee, class: "form-control", placeholder: "Cost for setup" %></div>
    </div>
      <div class="form-group">
      <div class="col-sm-4 control-label"><%= f.label :image %></div>
      <div class="col-sm-7"><%= f.file_field :image %></div>
    </div>
  </div>
</div>
<br><br>
<div class="form-actions">
  <div class="col-md-offset-4 col-md-4">
    <%= f.button :submit, class: 'btn btn-block btn-lg btn-success' %>
    <%= link_to "back", :back, class: 'btn btn-lg btn-block btn-default' %>
  </div>
</div>
<% end %>
