<div class="jumbotron col-md-offset-3 col-md-6">
  <div class="page-header col-md-offset-3">
    <h2>Create New User</h2>
  </div>
  <%= form_for(@user) do |f| %>
  <div class="form-horizontal">
    <div class="form-group">
      <div class="col-sm-3 control-label"><%= f.label :email, "Email" %></div>
      <div class="col-sm-6"><%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "User email address" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="col-sm-3 control-label"><%= f.label :password, "Password" %></div>
      <div class="col-sm-6 input-group"><%= f.password_field :password, :autocomplete => "off", class: "form-control", placeholder: "User password" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="col-sm-3 control-label"><%= f.label :password_confirmation, "Confirm" %></div>
      <div class="col-sm-6 input-group"><%= f.password_field :password_confirmation, :autocomplete => "off", class: "form-control", placeholder: "Retype Password" %>
      </div>
    </div>
    <p class="col-md-offset-3">
    <%= f.radio_button(:role, 'admin') %>
    <%= label_tag(:role, "Administrator") %><br />
    <%= f.radio_button(:role, 'mod', checked: true) %>
    <%= label_tag(:role, "Moderator") %>
    </p>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4">
      <%= f.submit "Sign up", class: "btn btn-success" %>
      <%= link_to "Back", :back, class: "btn btn-info" %>
    </div>
  </div>
</div>
<% end %>
