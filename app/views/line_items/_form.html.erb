<%= form_for([@order, @line_item], remote: true, :html => { :class => 'form-horizontal' }) do |f| %>
<div class="form-group">
  <div class="col-sm-4 control-label"><%= f.label :product_id, "Select Product" %></div>
  <div class="col-sm-2"><%= f.collection_select :product_id, Product.all, :id, :name, prompt: true, class: "form-control" %></div>
  <div class="col-sm-1 control-label"><%= f.label :qty, "Quantity" %></div>
  <div class="col-sm-2"><%= f.number_field :qty, class: "form-control" %></div>
</div>
<br>
<div class="form-actions">
  <div class="col-md-offset-7 col-md-4">
    <%= f.button :submit, class: 'btn btn-sm btn-success' %>
    <%= link_to "back", :back, class: 'btn btn-sm btn-default' %>
  </div>
</div>
<br><br><br>
<% end %>
