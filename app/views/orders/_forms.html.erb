<%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
<div class="form-group">
  <div class="col-sm-4 control-label"><%= f.label :recieved, "Recieved" %></div>
  <div class="col-sm-7"><%= f.check_box :recieved, class: "form-control" %></div>
</div>
<div class="form-group">
  <div class="col-sm-4 control-label"><%= f.label :invoice_num, "Invoice Number" %></div>
  <div class="col-sm-7"><%= f.text_field :invoice_num, class: "form-control", placeholder: %></div>
</div>
<br><br>
<div class="form-actions">
  <div class="col-md-offset-4 col-md-4">
    <%= f.button :submit, class: 'btn btn-block btn-lg btn-success' %>
    <%= link_to "back", :back, class: 'btn btn-lg btn-block btn-default' %>
  </div>
</div>
<% end %>
