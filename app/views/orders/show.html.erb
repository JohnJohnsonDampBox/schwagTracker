<%- model_class = Order -%>
<div class="page-header">
  <div class="col-md-offset-4">
    <h1>Order Information</h1>
  </div>
</div>
<div class="line_items col-md-offset-3">
  <%= render @order.line_items %>
</div>
<div class="col-md-offset-3">
  <h4><strong>Item Received:</strong> <%= @order.received %></h4>
</div>
<div class="col-md-offset-3">
  <h4><strong>Invoice #:</strong> <%= @order.invoice_num %></h4>
</div>
<div class="col-md-offset-3">
  <h4><strong>Created:</strong> <%= @order.created_at.strftime("Created on : %m/%d/%Y at %I:%M%p") %></h4>
<br>
<div class="form-actions col-md-offset-3">
  <%= link_to "back", :back, class: 'btn btn-sm btn-default'  %>
  <%= link_to "edit", edit_order_path(@order), class: 'btn btn-sm btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
  order_path(@order),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: 'btn btn-sm btn-danger' %>
</div>
