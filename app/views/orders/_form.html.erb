<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
<div class="col-md-offset-3 col-md-6">
  <div class="form-group">
    <div class="col-md-3 control-label"><%= f.label :invoice_num, "Invoice Number" %></div>
    <div class="col-md-6"><%= f.text_field :invoice_num, class: "form-control" %></div>
  </div>
  <br>
  <div class="form-group">
    <div class="col-md-3 control-label"><%= f.label :received, "Recieved" %></div>
    <div class="col-md-2 col-md-offset-2"><%= f.check_box :received, class: "form-control" %></div>
  </div>
  <br>
</div>

<div class="form-actions">
  <div class="col-md-offset-4 col-md-2">
    <%= f.button :submit, class: 'btn btn-block btn-lg btn-success' %>
  </div>
  <div class="col-md-2">
    <%= link_to "back", :back, class: 'btn btn-lg btn-block btn-default' %>
  </div>
</div>
<% end %>
