<div class="jumbotron col-md-offset-3 col-md-6">
<div class="page-header col-md-offset-5">
  <h2>Sign up</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-horizontal">
    <div class="form-group">
      <div class="col-sm-3 control-label"><%= f.label :email %></div>
      <div class="col-sm-6"><%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Your email address" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="col-sm-3 control-label"><%= f.label :password, "Password" %></div>
      <div class="col-sm-6 input-group"><%= f.password_field :password, :autocomplete => "off", class: "form-control", placeholder: "Your password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-3 control-label"><%= f.label :password_confirmation, "Confirm Password" %></div>
      <div class="col-sm-6 input-group"><%= f.password_field :password_confirmation, :autocomplete => "off", class: "form-control", placeholder: "Retype Password" %>
        <span class="input-group-btn"><%= f.submit "Sign up", class: "btn btn-success" %></span>
      </div>
    </div>
  </div>
  <br>
<% end %>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= render "devise/shared/links" %>
    <%= link_to "Back", root_path, class: "btn btn-info btn-xs" %>
  </div>
</div>
